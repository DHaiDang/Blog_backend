<% include header %>
<body>

<div class="container-sm" >
    <div class="row col-sm-6">
        <h1>Form</h1>
        <form action="/api/post" method="post" class="row needs-validation" >
            <div class="col-md-4">
                <label for="title" class="form-label">Title: </label>
                <input id="title" class="form-control" type="text" name="title" required>
                <div class="valid-feedback">
                    Nice!
                </div>
            </div>
            <div class="col-md-4">
                <label for="category" class="form-label">Category: </label>
                <select id="category" name="category" class="form-select col-sm-4" aria-label="Category">
                    <option value="lifestyle">Life style</option>
                    <option value="travel">Travel</option>
                    <option value="networking">Networking</option>
                    <option value="webrisk">Web Vulnerability</option>
                    <option value="coding">Coding</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="author" class="form-label">Author: </label>
                <input id="author" class="form-control" type="text" name="author" required>
                <div class="valid-feedback">
                    Nice!
                </div>
            </div>
            <div class="mb-3">
                <label for="summary" class="form-label">Summary: </label>
                <input id="summary" class="form-control" type="text" name="summary" required>
            </div>
            
            <div class="mb-3">
                <label for="content" class="form-label">Content: </label>
                <textarea class="form-control" id="content" type="text" name="content" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="images" class="form-label">Images: </label>
                <input id="images" class="form-control" type="text" name="images" value="link images" required>
            </div>
            <button type="submit" class="btn btn-primary">Publish</button>
        </form>
    </div>
</div>
</body>

</html>